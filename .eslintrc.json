{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "*.min.js",
    "dist/**/*.js",
    "node_modules/**/*.js"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-unreachable-loop": [
      "error",
      {
        "ignore": [
          "ForInStatement",
          "ForOfStatement"
        ]
      }
    ]
  }
}